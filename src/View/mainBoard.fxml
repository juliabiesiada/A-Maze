<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="650.0" maxWidth="650.0" prefHeight="650.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Controller">
   <top>
      <VBox prefHeight="79.0" prefWidth="376.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="labelInventory" prefHeight="40.0" prefWidth="174.0" text="Inventory">
               <font>
                  <Font name="Consolas" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" top="5.0" />
                     </HBox.margin>
                     <image>
                        <Image url="@../Assets/gem_icon.png" />
                     </image>
                  </ImageView>
                  <Label fx:id="labelGems" text="0">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Label>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" top="5.0" />
                     </HBox.margin>
                     <image>
                        <Image url="@../Assets/potion_icon.png" />
                     </image>
                  </ImageView>
                  <Label fx:id="labelPotions" text="0">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <ImageView fitHeight="32.0" fitWidth="32.0" layoutX="85.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Assets/poison_icon.png" />
                     </image>
                     <HBox.margin>
                        <Insets right="10.0" top="5.0" />
                     </HBox.margin>
                  </ImageView>
                  <Label fx:id="labelPoisons" layoutX="130.0" layoutY="20.0" text="0">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox prefHeight="56.0" prefWidth="475.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="labelStatus" prefHeight="57.0" prefWidth="433.0" text="status">
               <font>
                  <Font name="Consolas" size="13.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <padding>
                  <Insets right="5.0" />
               </padding>
            </Label>
            <Button fx:id="btnEndTurn" mnemonicParsing="false" onMouseClicked="#onClicked" prefHeight="41.0" prefWidth="110.0" text="End turn">
               <font>
                  <Font name="Consolas" size="13.0" />
               </font>
               <HBox.margin>
                  <Insets left="90.0" top="7.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
   <center>
      <Pane fx:id="board_root" maxHeight="494.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
