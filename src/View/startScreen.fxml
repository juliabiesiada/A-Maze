<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootStart" prefHeight="200.0" prefWidth="230.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label text="Ready to be a-MAZE-d?" BorderPane.alignment="CENTER">
         <font>
            <Font name="Yu Gothic Medium" size="17.0" />
         </font>
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="twoPlayers" mnemonicParsing="false" onMouseClicked="#startGame" text="2 players">
               <font>
                  <Font name="Yu Gothic Medium" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="threePlayers" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#startGame" text="3 players">
               <font>
                  <Font name="Yu Gothic Medium" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="fourPlayers" layoutX="10.0" layoutY="35.0" mnemonicParsing="false" onMouseClicked="#startGame" text="4 players">
               <font>
                  <Font name="Yu Gothic Medium" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets left="70.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
